@using BetterCms.Module.Users.Content.Resources
@using Microsoft.Web.Mvc
@model BetterCms.Module.Users.ViewModels.Registration.CreateFirstUserViewModel

@{
    Layout = "~/Areas/bcms-users/Views/Shared/PublicActionLayout.cshtml";
    ViewBag.Title = "Better CMS - Users Module Registration";
}
@using (Html.BeginForm())
{
    <div class="bcms-content-dialog-title">Create first user for the Better CMS</div>
    @*<div class="validation-summary-valid" data-valmsg-summary="true">
        @Html.ValidationSummary()
    </div>*@

    <div class="bcms-form-block-holder">
        <div>
            <div class="bcms-content-titles">@UsersGlobalization.EditUser_FirstName_Title</div>
            @Html.ValidationMessageFor(m => m.FirstName)
            <div class="bcms-field-wrapper">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "bcms-field-text", @id = "firstName" })
            </div>

            <div class="bcms-content-titles">@UsersGlobalization.EditUser_LastName</div>
            @Html.ValidationMessageFor(m => m.LastName)
            <div class="bcms-field-wrapper">
                @Html.TextBoxFor(m => m.LastName, new { @class = "bcms-field-text" })
            </div>

            <div class="bcms-content-titles">@UsersGlobalization.EditUser_UserName_Title</div>
            @Html.ValidationMessageFor(m => m.UserName)
            <div class="bcms-field-wrapper">
                @Html.TextBoxFor(m => m.UserName, new { @class = "bcms-field-text" })
            </div>
        </div>

        <div>
            <div class="bcms-content-titles">@UsersGlobalization.EditUser_Email_Title</div>
            @Html.ValidationMessageFor(m => m.Email)
            <div class="bcms-field-wrapper">
                @Html.TextBoxFor(m => m.Email, new { @class = "bcms-field-text" })
            </div>

            <div class="bcms-content-titles">@UsersGlobalization.EditUser_Password_Title</div>
            @Html.ValidationMessageFor(m => m.Password)
            <div class="bcms-field-wrapper">
                @Html.PasswordFor(m => m.Password, new { @class = "bcms-field-text" })
            </div>

            <div class="bcms-content-titles">@UsersGlobalization.EditUser_RetypePassword_Title</div>
            @Html.ValidationMessageFor(m => m.RetypedPassword)
            <div class="bcms-field-wrapper">
                @Html.PasswordFor(m => m.RetypedPassword, new { @class = "bcms-field-text" })
            </div>
        </div>
    </div>

    @Html.SubmitButton("submit", "Save", new { @class = "bcms-btn-primary" })
}
<script type="text/javascript">
    (function () {
        document.getElementById('firstName').focus();
    })();
</script>