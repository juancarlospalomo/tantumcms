@using BetterCms.Module.Pages.Content.Resources
@using BetterCms.Module.Root.Mvc.Helpers
@model BetterCms.Module.Pages.ViewModels.Content.PageContentViewModel

<div class="bcms-form-block-holder">
    <div>
        <div class="bcms-input-list-holder" id="bcms-custom-css-container">
            <div class="bcms-content-titles">@PagesGlobalization.HtmlContent_CustomCss_Title</div>
            @Html.TextAreaFor(model => model.CustomCss, new { @class = "bcms-field-textarea bcms-code-field bcms-code-field-css", @style = "width:820px;", @id = Guid.NewGuid() })
            @Html.BcmsValidationMessageFor(model => model.CustomCss)
            <div class="bcms-check-field-helper">
                <div class="bcms-checkbox-holder">
                    @Html.CheckBoxFor(model => model.EnabledCustomCss)
                    <div class="bcms-checkbox-label bcms-js-edit-label">@Html.Raw(PagesGlobalization.HtmlContent_RenderCustomCss_Title)</div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <div class="bcms-input-list-holder" id="bcms-custom-js-container" style="height: 800px">
            <div class="bcms-content-titles">@PagesGlobalization.HtmlContent_CustomJs_Title</div>
            @Html.TextAreaFor(model => model.CustomJs, new { @class = "bcms-field-textarea bcms-code-field bcms-code-field-javascript", @style = "width:820px", @id = Guid.NewGuid() })
            @Html.BcmsValidationMessageFor(model => model.CustomJs)
            <div class="bcms-check-field-helper">
                <div class="bcms-checkbox-holder">
                    @Html.CheckBoxFor(model => model.EnabledCustomJs)
                    <div class="bcms-checkbox-label bcms-js-edit-label">@Html.Raw(PagesGlobalization.HtmlContent_RenderCustomJs_Title)</div>
                </div>
            </div>
        </div>
    </div>
</div>
