@using BetterCms.Module.Pages.Content.Resources
@using BetterCms.Module.Root.Mvc.UI
@model BetterCms.Module.Pages.ViewModels.History.HtmlContentHistoryViewModel

<div class="bcms-content-info-block">
    <div class="bcms-input-list-holder">
        <div class="bcms-content-titles">@PagesGlobalization.AddPageContent_RegularContentTab_ContentName_Title</div>
        <div class="bcms-field-wrapper">
            @Html.TextBoxFor(model => model.Name, new { @readonly = "readonly", @class = "bcms-field-text" })
        </div>
    </div>

    <div class="bcms-input-list-holder">
        <div class="bcms-content-titles">@PagesGlobalization.AddPageContent_RegularContentTab_LiveFrom_Title</div>
        <div class="bcms-field-wrapper">
            @Html.DateTextBoxFor(model => model.ActivationDate, Model.ActivationDate, new Dictionary<string, object> { { "readonly", "readonly" }, { "class", "bcms-field-text bcms-datepicker" } })
        </div>
    </div>

    <div class="bcms-input-list-holder">
        <div class="bcms-content-titles">@PagesGlobalization.AddPageContent_RegularContentTab_LiveTo_Title</div>
        <div class="bcms-field-wrapper">
            @Html.DateTextBoxFor(model => model.ExpirationDate, Model.ExpirationDate, new Dictionary<string, object> { { "readonly", "readonly" }, { "class", "bcms-field-text bcms-datepicker" } })
        </div>
    </div>
</div>

<div class="bcms-input-list-holder">
    <div class="bcms-content-titles">@PagesGlobalization.HtmlContent_Content_Title</div>
    <div class="bcms-field-wrapper">
        @Html.TextAreaFor(model => model.RowText, new { @readonly = "readonly", @class = "bcms-field-textarea bcms-code-field ", @id = Guid.NewGuid() })
    </div>
</div>

<div class="bcms-input-list-holder">
    <div class="bcms-content-titles">@PagesGlobalization.HtmlContent_CustomCss_Title</div>
    <div class="bcms-field-wrapper">
        @Html.TextAreaFor(model => model.CustomCss, new { @readonly = "readonly", @class = "bcms-field-textarea bcms-code-field bcms-code-field-css", @id = Guid.NewGuid() })
    </div>

    <div class="bcms-checkbox-holder">
        @Html.CheckBoxFor(model => model.UseCustomCss, new { @disabled = "disabled" })
        <div class="bcms-checkbox-label">@Html.Raw(PagesGlobalization.HtmlContent_RenderCustomCss_Title)</div>
    </div>
</div>

<div class="bcms-input-list-holder">
    <div class="bcms-content-titles">@PagesGlobalization.HtmlContent_CustomJs_Title</div>
    <div class="bcms-field-wrapper">
        @Html.TextAreaFor(model => model.CustomJs, new { @readonly = "readonly", @class = "bcms-field-textarea bcms-code-field bcms-code-field-javascript", @id = Guid.NewGuid() })
    </div>

    <div class="bcms-checkbox-holder">
        @Html.CheckBoxFor(model => model.UseCustomJs, new { @disabled = "disabled" })
        <div class="bcms-checkbox-label">@Html.Raw(PagesGlobalization.HtmlContent_RenderCustomJs_Title)</div>
    </div>
</div>
